# set the keyboard map so that it doesn't bind to the wrong ones
#
# Spawn terminal
super + Return
    st
# Spawn alternative terminal
super + control + Return
    alacritty

# Reload shxkd alt + Escape
super + Escape
    pkill -USR1 -x sxhkd

# Rofi to spawn menu
super + shift + Return
    rofi -show drun

# Screenshot
super + shift + s
    ~/bin/rofi-scrot

# toggle workspace
super + Tab
    bspc desktop -f last

# gaps
super + a
    bspc config -d focused window_gap $(( `bspc config -d focused window_gap` + 5))
super + x
    bspc config -d focused window_gap $(( `bspc config -d focused window_gap` - 5))
super + r
    bspc config window_gap 2

# toggle floating
super + f
    bspc node -t \~floating
# toggle sticky
super + p
    bspc node -g sticky
# toggle locked
super + l
    bspc node -g locked

# Switch to desktop #
super + {1-5}
    bspc desktop -f {1-9}

# move window to desktop
super + shift + {1-9}
    bspc node --to-desktop {1-9}

# focus windows
super + {n,e}
    bspc node -f {next.local.window, prev.local.window}

super + shift + {n,e}
    bspc node -s {next.local.window, prev.local.window}

super + y
    bsp-layout set tall

#focus window
super + {Left, Right, Up, Down}
    bspc node -f {west, east, north, south}

#swap window
super + shift + {Left, Right, Up, Down}
    bspc node -s {west, east, north, south}

# swap to position of biggest
super + space
    bspc node -s $(bspc query -N -n biggest.local)

# equalize nodes on desktop
super + u
    bspc node @/ -E

# close current window
super + shift + q
    bspc node -c

# Volume
XF86AudioMute
    sh -c "pactl set-sink-mute 0 toggle"
XF86AudioLowerVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -5%"
XF86AudioRaiseVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +5%"

#brightness
XF86MonBrightnessDown
    sh -c "xbacklight -dec 5"
XF86MonBrightnessUp
    sh -c "xbacklight -inc 5"

# next wallpaper
super + control + n
    tapet -n

# Quit/Restart bspwm
super + control + {q, r}
    bspc {quit, wm -r}
