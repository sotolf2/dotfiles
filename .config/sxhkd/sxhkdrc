# Spawn terminal
super + Return
    st

# Reload shxkd alt + Escape
super + Escape
    pkill -USR1 -x sxhkd

# Rofi to spawn menu
super + shift + Return
    rofi -show drun

# Switch to desktop #
super + {1-5}
    bspc desktop -f {1-9}

# move window to desktop
super + shift + {1-9}
    bspc node --to-desktop {1-9}

# focus windows
super + {m,n,e,i}
    bspc node -f {north,west,east,south}

super + y
    bsp-layout set tall

#focus window
super + Left
    bspc node -f west
super + Right
    bspc node -f east
super + Up
    bspc node -f north
super + Down
    bspc node -f south

# close current window
super + shift + q
    bspc node -c

# next wallpaper
super + shift + n
    variety -n

# Quit/Restart bspwm
super + control + {q, r}
    bspc {quit, wm -r}
