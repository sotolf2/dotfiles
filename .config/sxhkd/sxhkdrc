# set the keyboard map so that it doesn't bind to the wrong ones
#
# Spawn terminal
super + Return
    st

# Reload shxkd alt + Escape
super + Escape
    pkill -USR1 -x sxhkd

# Rofi to spawn menu
super + shift + Return
    rofi -show drun

# Screenshot
super + shift + s
    rofi-scrot

# toggle workspace
super + Tab
    bspc desktop -f last

# gaps
super + shift + g
    bspc config window_gap 20
super + g
    bspc config window_gap 2

# toggle floating
super + f
    bspc node -t \~floating

# Switch to desktop #
super + {1-5}
    bspc desktop -f {1-9}

# move window to desktop
super + shift + {1-9}
    bspc node --to-desktop {1-9}

# focus windows
super + {n,e}
    bspc node -f {next.local,prev.local}

super + shift + {n,e}
    bspc node -s {next.local,prev.local}

super + y
    bsp-layout set tall

#focus window
super + Left
    bspc node -f west
super + Right
    bspc node -f east
super + Up
    bspc node -f north
super + Down
    bspc node -f south
#swap window
super + shift + Left
    bspc node -s west
super + shift + Right
    bspc node -s east
super + shift + Up
    bspc node -s north
super + shift + Down
    bspc node -s south

# close current window
super + shift + q
    bspc node -c

# next wallpaper
super + shift + n
    variety -n

# Quit/Restart bspwm
super + control + {q, r}
    bspc {quit, wm -r}
